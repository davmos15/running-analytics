rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all access to segments collection
    match /segments/{document=**} {
      allow read, write: if true;
    }
    
    // Allow users to read and write their own personal bests using Strava athlete ID
    match /personalBests/{athleteId} {
      allow read, write: if true; // Temporarily allow all access for Strava-based auth
    }
    
    // Allow users to read and write their own activities using Strava athlete ID
    match /activities/{athleteId} {
      allow read, write: if true; // Temporarily allow all access for Strava-based auth
    }
    
    // Allow users to read and write documents in collections under their athlete ID
    match /users/{athleteId}/{document=**} {
      allow read, write: if true; // Temporarily allow all access for Strava-based auth
    }
  }
}